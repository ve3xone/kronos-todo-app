<resources>

    <!-- Base application theme. -->
    <style name="AppThemeSystem" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- <item name="android:fontFamily">@font/font</item>-->
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- <item name="android:fontFamily">@font/font</item>-->
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- <item name="android:fontFamily">@font/font</item>-->
    </style>

    <style name="PasswordDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">#525252</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">1</item>
    </style>

</resources>
