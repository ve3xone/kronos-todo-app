<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
 <ScrollView
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
  <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:context=".MainActivity">

   <TextView
           android:text="@string/themes"
           android:layout_width="60dp"
           android:layout_height="25dp"
           android:id="@+id/tvTheme"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginTop="10dp" />

   <RadioButton
           android:text="@string/system_theme"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:id="@+id/rBSystemTheme"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginEnd="8dp"
           android:layout_marginStart="8dp"
           android:layout_marginTop="10dp"
           app:layout_constraintTop_toBottomOf="@+id/tvTheme" />

   <RadioButton
           android:text="@string/dark_theme"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:id="@+id/rBDark"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginEnd="8dp"
           android:layout_marginStart="8dp"
           app:layout_constraintTop_toBottomOf="@+id/rBSystemTheme" />

   <RadioButton
           android:text="@string/white_theme"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:id="@+id/rBWhiteTheme"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginEnd="8dp"
           android:layout_marginStart="8dp"
           tools:layout_editor_absoluteY="125dp"
           app:layout_constraintTop_toBottomOf="@+id/rBDark" />

   <TextView
           android:text="@string/other"
           android:layout_width="55dp"
           android:layout_height="wrap_content"
           android:id="@+id/tvOther"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginTop="10dp"
           app:layout_constraintTop_toBottomOf="@+id/rBWhiteTheme"/>

   <Button
           android:text="@string/export_db"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:id="@+id/bExportDB"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginEnd="8dp"
           android:layout_marginStart="8dp"
           android:layout_marginTop="10dp"
           app:layout_constraintTop_toBottomOf="@+id/tvOther" />

   <Button
           android:text="@string/import_db"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:id="@+id/bImportDB"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginEnd="8dp"
           android:layout_marginStart="8dp"
           app:layout_constraintTop_toBottomOf="@+id/bExportDB" />

   <Button
           android:text="@string/export_ics"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:id="@+id/bExportICS"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginEnd="8dp"
           android:layout_marginStart="8dp"
           app:layout_constraintTop_toBottomOf="@+id/bImportDB" />

   <Button
           android:text="@string/import_ics"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:id="@+id/bImportICS"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginEnd="8dp"
           android:layout_marginStart="8dp"
           app:layout_constraintTop_toBottomOf="@+id/bExportICS" />

   <Button
           android:text="@string/back"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:id="@+id/cancel"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginEnd="8dp"
           android:layout_marginStart="8dp"
           app:layout_constraintTop_toBottomOf="@+id/bImportICS" />

  </androidx.constraintlayout.widget.ConstraintLayout>
 </ScrollView>
</layout>